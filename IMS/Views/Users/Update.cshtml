@model IncidentsModel;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>IMS - Incident Management System</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">Update</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-user"></i> Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="login" asp-action="logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                </li>
            </ul>
        </nav>

        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="#" class="brand-link text-center">
                <span class="brand-text font-weight-light">IMS</span>
            </a>
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">
                        <li class="nav-item">
                            <a asp-action="dashboard" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="" class="nav-link ">
                                <i class="nav-icon fas fa-file-alt"></i>
                                <p>Submit Report</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="reports" class="nav-link">
                                <i class="nav-icon fas fa-file-alt"></i>
                                <p>Reports</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Closed" class="nav-link">
                                <i class="fa-solid fa-clipboard-check"></i>
                                <p>Closed Cases</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">Update Report</h1>
                        </div>
                    </div>
                </div>
            </div>

            <section class="content">
                <div class="container-fluid">
                    <div class="card shadow">
                        <div class="card-header bg-primary text-white">
                            <h3 class="card-title"><i class="fas fa-edit"></i> Update Incident</h3>
                        </div>
                        <div class="card-body">
                            <form method="post" asp-action="Updateinc" enctype="multipart/form-data">
                                <input type="hidden" name="Id" value="@Model.incident_id" />

                                <!-- Incident Title -->
                                <div class="mb-3">
                                    <label class="form-label"><i class="fas fa-heading"></i> Incident Title</label>
                                    <input type="text" name="tittle" class="form-control" value="@Model.tittle" required>
                                </div>

                                <!-- Incident Description -->
                                <div class="mb-3">
                                    <label class="form-label"><i class="fas fa-file-alt"></i> Description</label>
                                    <textarea class="form-control" name="description" rows="4" required>@Model.description</textarea>
                                </div>

                                <!-- Incident Category -->
                                <div class="mb-3">
                                    <label class="form-label"><i class="fas fa-tags"></i> Category</label>
                                    <select class="form-select" name="category" required>
                                        <option value="@Model.category" selected>@Model.category</option>
                                        <option value="" disabled>Select Category</option>
                                        <option value="Unauthorized Access">Unauthorized Access</option>
                                        <option value="Data Breach">Data Breach</option>
                                        <option value="Malware Attack">Malware / Ransomware Attack</option>
                                        <option value="Phishing Attempt">Phishing Attempt</option>
                                        <option value="Password Compromise">Password Compromise</option>
                                        <option value="Denial of Service Attack">Denial of Service (DoS) Attack</option>
                                        <option value="System Crash">System Crash / Downtime</option>
                                        <option value="Network Issue">Network Connectivity Issue</option>
                                        <option value="Software Bug">Software Bug / Application Failure</option>
                                        <option value="Server Overload">Server Overload</option>
                                        <option value="Hardware Malfunction">Hardware Malfunction</option>
                                        <option value="Power Outage">Power Outage</option>
                                        <option value="Equipment Failure">Equipment Failure</option>
                                        <option value="Data Loss">Data Loss / Corruption</option>
                                        <option value="Backup Failure">Backup Failure</option>
                                        <option value="Service Unavailability">Service Unavailability</option>
                                        <option value="Security Policy Violation">Violation of Security Policies</option>
                                        <option value="Resource Misuse">Misuse of Company Resources</option>
                                        <option value="Unauthorized Data Sharing">Unauthorized Data Sharing</option>
                                        <option value="Privacy Violation">Privacy Violation</option>
                                        <option value="Workplace Injury">Workplace Injury</option>
                                        <option value="Fire Hazard">Fire Hazard</option>
                                        <option value="Unauthorized Visitors">Unauthorized Visitors</option>
                                        <option value="Health & Safety Concerns">Health & Safety Concerns</option>
                                        <option value="Customer Complaint">Customer Complaint</option>
                                        <option value="Service Disruption">Service Disruption</option>
                                        <option value="Product Defect">Product Defect</option>
                                        <option value="Fraudulent Activity">Fraudulent Activity</option>
                                    </select>
                                </div>

                                <!-- Priority Level -->
                                <div class="mb-3">
                                    <label class="form-label"><i class="fas fa-exclamation-circle"></i> Priority Level</label>
                                    <select class="form-select" name="priority" required>
                                        <option value="" disabled>Select priority</option>
                                        <option value="@Model.priority" selected>@Model.priority</option>
                                        <option value="High" class="text-danger">High</option>
                                        <option value="Medium" class="text-warning">Medium</option>
                                        <option value="Low" class="text-success">Low</option>
                                    </select>
                                </div>

                                <!-- File Upload with Preview -->
                                <div class="mb-3">
                                    <label class="form-label"><i class="fas fa-upload"></i> Upload New Evidence</label>
                                    <div class="input-group">
                                        <input type="file" class="form-control" id="imageInput" name="image" accept="image/*">
                                        <label class="input-group-text btn btn-outline-secondary" for="imageInput">
                                            <i class="fas fa-paperclip"></i>
                                        </label>
                                    </div>
                                    <div class="form-text">Upload a new file if you want to replace the current one.</div>

                                    <!-- Image Preview -->
                                    <div class="mt-3 text-center d-none" id="imagePreviewContainer">
                                        <label class="form-label fw-bold">Image Preview:</label>
                                        <div class="border p-2 rounded shadow-sm bg-light">
                                            <img id="imagePreview" class="img-fluid rounded" style="max-width: 100%; height: auto;">
                                        </div>
                                    </div>
                                </div>

                                <!-- Submit Button -->
                                <div class="text-end">
                                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Update</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap and AdminLTE JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
    <!-- Bootstrap 5 Image Preview Script -->
    <script>
        document.getElementById("imageInput").addEventListener("change", function(event) {
            const file = event.target.files[0];
            const previewContainer = document.getElementById("imagePreviewContainer");
            const previewImage = document.getElementById("imagePreview");

            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    previewImage.src = e.target.result;
                    previewContainer.classList.remove("d-none");
                    previewContainer.classList.add("d-block");
                };
                reader.readAsDataURL(file);
            } else {
                previewContainer.classList.add("d-none");
            }
        });
    </script>
</body>
</html>
