@* @model List<IncidentsModel> *@
@model List<IncidentViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>IMS - Incident Management System</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">Reports</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-user"></i> Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="login" asp-action="logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                </li>
            </ul>
        </nav>

        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="#" class="brand-link text-center">
                <span class="brand-text font-weight-light">IMS</span>
            </a>
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">
                        <li class="nav-item">
                            <a asp-action="dashboard" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="" class="nav-link ">
                                <i class="nav-icon fas fa-file-alt"></i>
                                <p>Submit Report</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="reports" class="nav-link active">
                                <i class="nav-icon fas fa-file-alt"></i>
                                <p>Reports</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">Report</h1>
                        </div>
                    </div>
                </div>
            </div>

            <section class="content">
                <div class="container-fluid">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h3 class="card-title"><i class="fas fa-list"></i> Incident Reports</h3>
                        </div>
                        <div class="card-body">
                            <table id="incidentTable" class="table table-bordered table-striped">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Title</th>
                                        <th>Category</th>
                                        <th>Priority</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        @foreach (var item in Model)
                                        {
                                            var incident = item.Incident;
                                            var attachments = item.Attachments;
                                            <tr>
                                                <td>@incident.tittle</td>
                                                <td>@incident.category</td>
                                                <td>@incident.priority</td>
                                                <td>@incident.status</td>
                                                <td>
                                                    <button type="button" class="btn btn-primary btn-sm"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#incidentModal-@incident.incident_id">
                                                        <i class="fas fa-eye"></i>
                                                    </button>

                                                    @if (incident.status == "Pending")
                                                    {
                                                        <a asp-action="edit" asp-route-Id="@incident.incident_id" class="btn btn-warning btn-sm">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a asp-action="delete" asp-route-Id="@incident.incident_id" class="btn btn-danger btn-sm">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    }

                                                    <button type="button" class="btn btn-primary btn-sm"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#comments-@incident.incident_id">
                                                        <i class="fa-solid fa-comment"></i>
                                                    </button>

                                                </td>
                                            </tr>

                                            <!-- Modal -->
                                            <div class="modal fade" id="incidentModal-@incident.incident_id" tabindex="-1"
                                                 aria-labelledby="modalTitle-@incident.incident_id" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered modal-lg">
                                                    <div class="modal-content">
                                                        <div class="modal-header
                                                            @(incident.priority == "Low" ? "bg-success" :
                                                              incident.priority == "Medium" ? "bg-warning" :
                                                              "bg-danger") text-white">
                                                            <h5 class="modal-title" id="modalTitle-@incident.incident_id">
                                                                <i class="fas fa-exclamation-triangle"></i> Incident Details
                                                            </h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <div class="container">
                                                                <div class="row mb-3">
                                                                    <div class="col-md-6">
                                                                        <p><strong><i class="fas fa-heading"></i> Title:</strong> @incident.tittle</p>
                                                                    </div>
                                                                    <div class="col-md-6">
                                                                        <p><strong><i class="fas fa-tags"></i> Category:</strong> @incident.category</p>
                                                                    </div>
                                                                </div>
                                                                <div class="row mb-3">
                                                                    <div class="col-md-6">
                                                                        <p>
                                                                            <strong><i class="fas fa-exclamation-circle"></i> Priority:</strong>
                                                                            <span class="badge
                                                                                @(incident.priority == "Low" ? "bg-success" :
                                                                                  incident.priority == "Medium" ? "bg-warning" :
                                                                                  "bg-danger")">
                                                                                @incident.priority
                                                                            </span>
                                                                        </p>
                                                                    </div>
                                                                    <div class="col-md-6">
                                                                        <p><strong><i class="fas fa-calendar-alt"></i> Reported At:</strong> @incident.reported_at</p>
                                                                    </div>
                                                                </div>
                                                                <div class="row mb-3">
                                                                    <div class="col-md-12">
                                                                        <p>
                                                                            <strong><i class="fas fa-info-circle"></i> Status:</strong>
                                                                            <span class="badge
                                                                                @(@incident.status == "Pending" ? "bg-warning" :
                                                                                  "bg-success")">
                                                                                @incident.status
                                                                            </span>
                                                                        </p>
                                                                    </div>
                                                                </div>
                                                                <div class="row">
                                                                    <div class="col-md-12">
                                                                        <p><strong><i class="fas fa-file-alt"></i> Description:</strong></p>
                                                                        <div class="border rounded p-3 bg-light">
                                                                            @incident.description
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="row mt-3">
                                                                    <div class="col-md-12">
                                                                        <p><strong><i class="fas fa-paperclip"></i> Attachments:</strong></p>
                                                                        @if (attachments.Any())
                                                                        {
                                                                            <div class="row">
                                                                                @foreach (var attachment in attachments)
                                                                                {
                                                                                    string fileExtension = System.IO.Path.GetExtension(attachment.file_path).ToLower();
                                                                                    bool isImage = fileExtension == ".jpg" || fileExtension == ".jpeg" || fileExtension == ".png" || fileExtension == ".gif";

                                                                                    <div class="col-md-4 mb-2">
                                                                                        @if (isImage)
                                                                                        {
                                                                                            <a href="@attachment.file_path" target="_blank">
                                                                                                <img src="@attachment.file_path" class="img-fluid img-thumbnail" alt="Attachment Image">
                                                                                            </a>
                                                                                        }
                                                                                        else
                                                                                        {
                                                                                            <a href="@attachment.file_path" target="_blank" class="btn btn-outline-primary w-100">
                                                                                                <i class="fas fa-file-alt"></i> @attachment.file_name
                                                                                            </a>
                                                                                        }
                                                                                    </div>
                                                                                }
                                                                            </div>
                                                                        }
                                                                        else
                                                                        {
                                                                            <p class="text-muted">No attachments available.</p>
                                                                        }
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                                <i class="fas fa-times"></i> Close
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Modal for Moderator Comments and Attachments -->
                                            <div class="modal fade" id="comments-@incident.incident_id" tabindex="-1" aria-labelledby="comments-modal-label" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered modal-lg">
                                                    <div class="modal-content">
                                                        @if (item.Updates.Any())
                                                        {
                                                            @foreach (var update in item.Updates)
                                                            {
                                                                <div class="modal-header bg-primary text-white">
                                                                    <h5 class="modal-title" id="comments-modal-label">
                                                                        <i class="fas fa-comments"></i> Moderator Review
                                                                    </h5>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <div class="container">
                                                                        <h6><i class="fas fa-comment-dots"></i> Moderator Comments:</h6>
                                                                        <div class="border rounded p-3 bg-light">

                                                                            <div class="mb-2 p-2 border-bottom">
                                                                                @* <p class="fw-bold">@update.user_id (Moderator)</p> *@
                                                                                <p>@update.update_text</p>
                                                                                <small class="text-muted">@update.updated_at</small>
                                                                            </div>

                                                                        </div>

                                                                        <hr>

                                                                        <h6><i class="fas fa-paperclip"></i> Attachments:</h6>
                                                                        <div class="row">
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <!-- Modal Footer with Close Report Button -->
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                                        <i class="fas fa-times"></i> Close
                                                                    </button>
                                                                    <button type="button" class="btn btn-danger btn-sm"
                                                                            data-bs-toggle="modal"
                                                                            data-bs-target="#closed-@update.update_id">
                                                                        <i class="fas fa-check-circle"></i>
                                                                    </button>
                                                                </div>
                                                            }
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="7" class="text-center">No records found</td></tr>
                                    }
                                </tbody>

                            </table>

                        </div>
                    </div>
                </div>

            </section>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap and AdminLTE JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
</body>
</html>
