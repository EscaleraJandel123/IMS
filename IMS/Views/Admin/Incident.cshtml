@model List<IncidentViewModel>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - IMS</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.2.0/css/adminlte.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.2.0/js/adminlte.min.js"></script>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-user"></i> Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="login" asp-action="logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                </li>
            </ul>
        </nav>

        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="#" class="brand-link text-center">
                <span class="brand-text font-weight-light">IMS Dashboard</span>
            </a>
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">
                        <li class="nav-item">
                            <a asp-action="" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="incidents" class="nav-link active">
                                <i class="nav-icon fas fa-exclamation-triangle"></i>
                                <p>Incidents</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="users" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>Users</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="categories" class="nav-link">
                                <i class="fa-solid fa-list"></i>
                                <p>Categories</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="userslogs" class="nav-link">
                                <i class="fas fa-clipboard-list"></i>
                                <p>Logs</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper p-3">
            <div class="container-fluid">
                <h2 class="mb-4">Incidents Management</h2>

                <!-- Search & Filter -->
                <div class="d-flex justify-content-between mb-3">
                    <input type="text" class="form-control w-25" placeholder="Search incidents...">
                    <select class="form-select w-25">
                        <option value="">Filter by Status</option>
                        <option value="Pending">Pending</option>
                        <option value="In Progress">In Progress</option>
                        <option value="Resolved">Resolved</option>
                    </select>
                </div>
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h3 class="card-title"><i class="fas fa-exclamation-triangle"></i>Incidents Managements</h3>
                    </div>
                    <div class="card-body">
                        <!-- Incidents Table -->
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Title</th>
                                        <th>Category</th>
                                        <th>Priority</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        @foreach (var item in Model)
                                        {
                                            var incident = item.Incident;
                                            var attachments = item.Attachments;
                                            var users = item.Users;
                                            <tr>
                                                <td>@incident.tittle</td>
                                                <td>@incident.category</td>
                                                <td>@incident.priority</td>
                                                <td>@incident.status</td>
                                                <td>
                                                    <button type="button" class="btn btn-primary btn-sm"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#incidentModal-@incident.incident_id">
                                                        <i class="fas fa-eye"></i>View
                                                    </button>

                                                    @if (incident.status == "Pending")
                                                    {
                                                        <a asp-action="delete" asp-route-Id="@incident.incident_id" class="btn btn-danger btn-sm"
                                                        onclick="return confirm('Are you sure you want to delete this Incident?');">
                                                            <i class="fas fa-trash"></i>Delete
                                                        </a>

                                                        <button type="button" class="btn btn-primary btn-sm"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#assign-@incident.incident_id">
                                                            <i class="fa-solid fa-paper-plane"></i>Assign
                                                        </button>
                                                    }
                                                    @if (incident.status == "Closed")
                                                    {
                                                        <a asp-controller="reports" asp-action="downloadincidentreport" asp-route-incidentId="@incident.incident_id" class="btn btn-primary btn-sm">
                                                            <i class="fa fa-download"></i> Download Report
                                                        </a>
                                                    }
                                                </td>
                                            </tr>

                                            <!-- Assign Incident Modal -->
                                            <div class="modal fade" id="assign-@incident.incident_id" tabindex="-1" aria-labelledby="assignModalLabel-@incident.incident_id" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered">
                                                    <div class="modal-content shadow-lg">
                                                        <div class="modal-header bg-primary text-white">
                                                            <h5 class="modal-title" id="assignModalLabel-@incident.incident_id">
                                                                <i class="fa-solid fa-user-check"></i> Assign Incident
                                                            </h5>
                                                            <button type="button" class="btn-close text-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <form method="post" asp-action="AssignIncident" asp-route-id="@incident.incident_id">
                                                                <div class="mb-3">
                                                                    <label for="assignUser" class="form-label">
                                                                        <strong><i class="fa-solid fa-users"></i> Select a User</strong>
                                                                    </label>
                                                                    <select class="form-select form-control-lg border-primary" name="assignedUserId" required>
                                                                        <option value="" disabled selected>-- Select a Moderator --</option>
                                                                        @foreach (var user in users.Where(u => u.role == "moderator"))
                                                                        {
                                                                            <option value="@user.user_id">@user.full_name - @user.department</option>
                                                                        }
                                                                    </select>
                                                                </div>
                                                                <div class="modal-footer d-flex justify-content-between">
                                                                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                                                        <i class="fa-solid fa-times"></i> Cancel
                                                                    </button>
                                                                    <button type="submit" class="btn btn-success">
                                                                        <i class="fa-solid fa-paper-plane"></i> Assign Incident
                                                                    </button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Modal Details -->
                                            <div class="modal fade" id="incidentModal-@incident.incident_id" tabindex="-1"
                                                 aria-labelledby="modalTitle-@incident.incident_id" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered modal-md">
                                                    <div class="modal-content">
                                                        <div class="modal-header
                                                            @(incident.priority == "Low" ? "bg-success" :
                                                              incident.priority == "Medium" ? "bg-warning" :
                                                              "bg-danger") text-white">
                                                            <h5 class="modal-title" id="modalTitle-@incident.incident_id">
                                                                <i class="fas fa-exclamation-triangle"></i> Incident Details
                                                            </h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <div class="container">
                                                                <div class="row mb-3">
                                                                    <div class="col-md-6">
                                                                        <p><strong><i class="fas fa-heading"></i> Title:</strong> @incident.tittle</p>
                                                                    </div>
                                                                    <div class="col-md-6">
                                                                        <p><strong><i class="fas fa-tags"></i> Category:</strong> @incident.category</p>
                                                                    </div>
                                                                </div>
                                                                <div class="row mb-3">
                                                                    <div class="col-md-6">
                                                                        <p>
                                                                            <strong><i class="fas fa-exclamation-circle"></i> Priority:</strong>
                                                                            <span class="badge
                                                                                @(incident.priority == "Low" ? "bg-success" :
                                                                                  incident.priority == "Medium" ? "bg-warning" :
                                                                                  "bg-danger")">
                                                                                @incident.priority
                                                                            </span>
                                                                        </p>
                                                                    </div>
                                                                    <div class="col-md-6">
                                                                        <p><strong><i class="fas fa-calendar-alt"></i> Reported At:</strong> @incident.reported_at.ToString("MMM dd, yyyy")</p>
                                                                    </div>
                                                                </div>
                                                                <div class="row mb-3">
                                                                    <div class="col-md-6">
                                                                        <p>
                                                                            <strong><i class="fas fa-info-circle"></i> Status:</strong>
                                                                            <span class="badge
                                                                                @(@incident.status == "pending" ? "bg-warning" :
                                                                                  "bg-success")">
                                                                                @incident.status
                                                                            </span>
                                                                        </p>
                                                                    </div>
                                                                    <div class="col-md-6">
                                                                        <p>
                                                                            <strong><i class="fa-solid fa-user-secret"></i> Assign:</strong>
                                                                            @(item.User != null ? item.User.full_name : "Not Assigned")
                                                                        </p>
                                                                    </div>
                                                                </div>

                                                                <div class="row">
                                                                    <div class="col-md-6">
                                                                        <p><strong><i class="fas fa-file-alt"></i> Description:</strong></p>
                                                                    </div>

                                                                    <div class="col-md-6">
                                                                        <p>
                                                                            <strong><i class="fa-solid fa-building"></i>Department: </strong>
                                                                            @(item.User != null ? item.User.department : "Not Assigned")
                                                                        </p>
                                                                    </div>
                                                                </div>

                                                                <div class="row">
                                                                    <div class="col-md-12">
                                                                        <div class="border rounded p-3 bg-light">
                                                                            @incident.description
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="row mt-3">
                                                                    <div class="col-md-12">
                                                                        <p><strong><i class="fas fa-paperclip"></i> Attachments:</strong></p>
                                                                        @if (attachments.Any())
                                                                        {
                                                                            <div class="row">
                                                                                @foreach (var attachment in attachments)
                                                                                {
                                                                                    string fileExtension = System.IO.Path.GetExtension(attachment.file_path).ToLower();
                                                                                    bool isImage = fileExtension == ".jpg" || fileExtension == ".jpeg" || fileExtension == ".png" || fileExtension == ".gif";

                                                                                    <div class="col-md-4 mb-2">
                                                                                        @if (isImage)
                                                                                        {
                                                                                            <a href="@attachment.file_path" target="_blank">
                                                                                                <img src="@attachment.file_path" class="img-fluid img-thumbnail" alt="Attachment Image">
                                                                                            </a>
                                                                                        }
                                                                                        else
                                                                                        {
                                                                                            <a href="@attachment.file_path" target="_blank" class="btn btn-outline-primary w-100">
                                                                                                <i class="fas fa-file-alt"></i> @attachment.file_name
                                                                                            </a>
                                                                                        }
                                                                                    </div>
                                                                                }
                                                                            </div>
                                                                        }
                                                                        else
                                                                        {
                                                                            <p class="text-muted">No attachments available.</p>
                                                                        }
                                                                    </div>
                                                                </div>

                                                                <hr>

                                                                <div class="row mt-3">
                                                                    @if (item.Updates.Any())
                                                                    {
                                                                        @foreach (var update in item.Updates)
                                                                        {
                                                                            <h6><i class="fas fa-comment-dots"></i> Moderator Comments:</h6>
                                                                            <div class="border rounded p-3 bg-light">

                                                                                <div class="mb-2 p-2 border-bottom">
                                                                                    @* <p class="fw-bold">@update.user_id (Moderator)</p> *@
                                                                                    <p>@update.update_text</p>
                                                                                    <small class="text-muted">@update.updated_at</small>
                                                                                </div>

                                                                            </div>
                                                                            <hr>
                                                                            <h6><i class="fas fa-paperclip"></i> Attachments:</h6>
                                                                            @if (update.attachments != null && update.attachments.Any())
                                                                            {
                                                                                <div class="mb-2">
                                                                                    <a href="@update.attachments" download class="btn btn-link">
                                                                                        <i class="fas fa-file"></i> @update.attachments
                                                                                    </a>
                                                                                </div>
                                                                            }
                                                                            else
                                                                            {
                                                                                <p class="text-muted">No attachments available.</p>
                                                                            }
                                                                        }
                                                                    }
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                                <i class="fas fa-times"></i> Close
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="7" class="text-center">No records found</td></tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
