@model IncidentViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - IMS</title>

    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.2.0/css/adminlte.min.css">

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">

    <!-- jQuery (Must be before DataTables) -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <!-- DataTables JS (Must be after jQuery) -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

    <!-- AdminLTE JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.2.0/js/adminlte.min.js"></script>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">Departments</a>
                </li>
            </ul>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a asp-controller="profile" asp-action="" class="nav-link"><i class="fas fa-user"></i> Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-danger" asp-controller="login" asp-action="logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                </li>
            </ul>
        </nav>

        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="#" class="brand-link text-center">
                <span class="brand-text font-weight-bold">
                    IMS -
                    @if (User.IsInRole("admin"))
                    {
                        <text>Admin</text>
                    }
                    else if (User.IsInRole("moderator"))
                    {
                        <text>Moderator</text>
                    }
                    else
                    {
                        <text>User</text>
                    }
                </span>
            </a>
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">
                        <li class="nav-item">
                            <a asp-action="" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="incidents" class="nav-link">
                                <i class="nav-icon fas fa-exclamation-triangle"></i>
                                <p>Incidents</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Closed" class="nav-link">
                                <i class="nav-icon fa-solid fa-clipboard-check"></i>
                                <p>Closed Cases</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="users" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>Users</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="categories" class="nav-link">
                                <i class="nav-icon fa-solid fa-list"></i>
                                <p>Categories</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="department" class="nav-link active">
                                <i class="nav-icon fa-solid fa-building"></i>
                                <p>Departments</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="userslogs" class="nav-link">
                                <i class="nav-icon fas fa-clipboard-list"></i>
                                <p>Logs</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>


        <div class="content-wrapper p-4">
            <div class="container-fluid">
                <div class="container mt-4">
                    <h2 class="mb-4 text-dark"><i class="fas fa-building"></i> Department Details</h2>

                    @foreach (var department in Model.Department)
                    {
                        <div class="card shadow-lg border-0">
                            <div class="card-header bg-dark text-white">
                                <h3 class="m-0">@department.department</h3>
                            </div>
                            <div class="card-body d-flex align-items-center">
                                <div class="flex-grow-1">
                                    <p class="text-muted"><strong>Description:</strong> @department.description</p>
                                </div>
                                @if (!string.IsNullOrEmpty(department.ImagePath))
                                {
                                    <img src="@department.ImagePath" alt="Department Image" class="img-fluid rounded shadow-sm ms-3" style="max-width: 200px;">
                                }
                            </div>
                        </div>

                        <h4 class="mt-4 text-secondary"><i class="fas fa-users"></i> Users in this Department</h4>

                        @if (Model.Users.Any())
                        {
                            <div class="row mt-3">
                                @foreach (var user in Model.Users)
                                {
                                    <div class="col-md-4">
                                        <div class="card border-light shadow-sm mb-3">
                                            <div class="card-body d-flex align-items-center">
                                                <i class="fas fa-user-circle fa-2x text-dark me-3"></i>
                                                <div>
                                                    <h6 class="mb-0">@user.full_name</h6>
                                                    <p class="text-muted mb-0"><i class="fas fa-envelope"></i> @user.email</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No users found in this department.</p>
                        }
                    }

                    <!-- Categories Section -->
                    <h4 class="mt-4 text-secondary"><i class="fas fa-list"></i> Categories</h4>
                    <div class="row">
                        @foreach (var category in Model.Categories)
                        {
                            <div class="col-md-3 col-sm-6">
                                <div class="card border-light shadow-sm mb-3">
                                    <div class="card-body text-center">
                                        <i class="fas fa-tag text-dark fa-2x mb-2"></i>
                                        <h6 class="mb-0">@category.category_name</h6>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Back Button -->
                    <a asp-action="department" class="btn btn-secondary mt-3">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
